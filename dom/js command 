//3rd selector: getElementsByClassName give html coleection
document.getElementsByClassName('item-list')
const list = document.getElementsByClassName('item-list')
let New = Array.from(list)
New[0].style.color = 'red'

New.forEach(function (li) {
    li.style.backgroundColor = 'green'
})



// example
const myh3 = document.querySelectorAll('.mw-heading')
myh3[6].innerText
myh3.forEach( function (h2) {
    h2.style.color = 'red';
    h2.style.textAlign = 'center';
    h2.style.backgroundColor = 'black';
    h2.style.borderRadius = '15px'
})